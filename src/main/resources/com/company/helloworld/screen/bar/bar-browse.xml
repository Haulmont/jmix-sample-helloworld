<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://barBrowse.caption"
        focusComponent="barsTable">
    <data readOnly="true">
        <collection id="barsDc"
                    class="com.company.helloworld.entity.Bar">
            <fetchPlan extends="_local"/>
            <loader id="barsDl">
                <query>
                    <![CDATA[select e from hello_Bar e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <groupTable id="barsTable"
                    width="100%"
                    dataContainer="barsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <pagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="barsTable.create"/>
                <button id="editBtn" action="barsTable.edit"/>
                <button id="removeBtn" action="barsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
