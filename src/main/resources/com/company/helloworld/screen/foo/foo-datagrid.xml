<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://fooDataGridBrowse.caption"
        focusComponent="foosTable">
    <data readOnly="true">
        <collection id="foosDc"
                    class="com.company.helloworld.entity.Foo">
            <fetchPlan extends="_local">
                <property name="bar" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="foosDl">
                <query>
                    <![CDATA[select e from hello_Foo e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <dataGrid id="foosTable"
                  width="100%"
                  dataContainer="foosDc" editorEnabled="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column property="name" id="name"/>
                <column property="bar" id="bar" editable="true"/>
            </columns>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="foosTable.create"/>
                <button id="editBtn" action="foosTable.edit"/>
                <button id="removeBtn" action="foosTable.remove"/>
            </buttonsPanel>
        </dataGrid>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
